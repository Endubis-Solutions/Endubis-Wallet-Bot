  "description": "A telegram bot wallet for Cardano assets.",
  "main": "index.js",
  "scripts": {
    "serve": "nodemon -x 'node index.js || touch index.js'  2>&1 | tee -a app2.log",
    "start": "concurrently \"nodemon --inspect index.js  2>&1 | tee -a app2.log\" \"nodemon --inspect server.js\""
  },
  "keywords": [
    "wallet",
    "bot",
    "cardano",
    "cryptocurrency",
    "ethiopia",
    "telegram"
  ],
