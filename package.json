    "blake2": "^4.1.1",
    "canvas": "^2.9.0",
    "cardano-crypto.js": "^6.1.1",
    "cardano-wallet-js": "^1.3.3",
    "concurrently": "^7.0.0",
    "cross-fetch": "^3.1.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "firebase-admin": "^10.0.2",
    "qr-code-styling-node": "^1.5.0",
    "telegraf": "^4.7.0",
    "telegraf-session-firestore": "^4.0.0",
    "telegraf-session-local": "^2.1.0",
    "telegraf-throttler": "^0.6.0"
  },
  "devDependencies": {
    "eslint": "^8.11.0",
